{
    "editor.fontSize": 14,
    "workbench.colorTheme": "GitHub Dark Default",
    "editor.tokenColorCustomizations": {
        "variables": "#557", // Cor da fonte das variáveis
        "functions": "#27ae60", // Cor das fontes das funções
        "keywords": "#3464ff", // Cor das palavras reservadas
        "numbers": "#ff7cc4", // Cor dos números
        "strings": "#f6ef7f", // Cor dos textos
        "comments": "#944",
        "textMateRules": [
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#acf"
                }
            },
            {
                "scope": "entity.name.namespace",
                "settings": {
                    "foreground": "#61AFEF" // <-- Mude para a cor que você deseja
                }
            },
            {
                "scope": "entity.name.type",
                "settings": {
                    "foreground": "#25ddfd" // <-- Mude para a cor que você deseja
                }
            },
            {
                "scope": "keyword.other",
                "settings": {
                    "foreground": "#61AFEF" // <-- Mude para a cor que você deseja
                }
            },
            {
                "scope": "keyword.other.sql",
                "settings": {
                    "foreground": "#25ddfd" // <-- Mude para a cor que você deseja
                }
            },
            {
                "scope": "variable.other",
                "settings": {
                    "foreground": "#789" // <-- Mude para a cor que você deseja
                }
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#c176ff" // <-- Mude para a cor que você deseja
                }
            },
        ],
    },
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "editor.minimap.renderCharacters": false,
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "NOTA",
        "REVISAR",
        "EXCLUIR"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#000",
        "background": "#fff"
    },
    "todo-tree.highlights.customHighlight": {
        "NOTA": {
            "type": "line",
            "foreground": "#000",
            "background": "#944", // "#ffd718",
            "iconColour": "#944",
            "icon": "note",
            "gutterIcon": true,
            "opacity": 90
        },
        "REVISAR": {
            "type": "text",
            "foreground": "#014ba0",
            "background": "#53d4ff",
            "iconColour": "#53d4ff",
            "icon": "info",
            "gutterIcon": true,
            "opacity": 90
        },
        "EXCLUIR": {
            "type": "text",
            "foreground": "#450000",
            "background": "#ec7356",
            "iconColour": "#f00",
            "icon": "trash",
            "gutterIcon": true,
            "opacity": 90
        }
    },
    "remote.SSH.remotePlatform": {
        "ec2-labs": "linux"
    },
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.includeExtendedSummary": true,
    "autoDocstring.includeName": true,
    "autoDocstring.startOnNewLine": true,
    "github.copilot.enable": {
        "*": false
    },
}
